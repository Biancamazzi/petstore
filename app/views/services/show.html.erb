<div class="container-id">
  <div class="banner-service">
    <div class="service-name-id">
      <h2><%= @service.name %></h2>
    </div>
    <div class="service-description-id">
      <p><%= @service.description %></p>
      <%= cl_image_tag("matt-nelson-aI3EBLvcyu4-unsplash_us8tmk",
        width: 400, height: 300, crop: :fill) %>
    </div>
    <button class="button-add">ADD TO CART</button>
    <div class="button-back"><%= link_to 'back', services_path %></div>
    <%= form_tag orders_path do %>
      <%= hidden_field_tag 'service_id', @service.id %>
      <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
